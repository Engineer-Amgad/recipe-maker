<h2>Create a New Recipe</h2>

<%= render partial: '/errors', locals: { record: @recipe} %>

<br>
<%= form_for @recipe do |f| %>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
    <br>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description, :cols => "70", :rows => "7"  %>
    <br>
    <%= f.label :categories %>
    <br>
    <%= f.collection_check_boxes :ingredient, Ingredient.all, :id, :name %>
    <%= f.submit %>

<% end %>